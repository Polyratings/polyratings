{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext"],
        "types": ["node", "@cloudflare/workers-types"],
        "outDir": "dist",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@backend/*": ["src/*"]
        },
        "declaration": true,
        "noEmit": true,
        "skipLibCheck": true,
        "noEmitHelpers": true
    },
    "include": ["src/**/*"]
}
