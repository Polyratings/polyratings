{
    "name": "cron",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/cron/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/cron",
                "main": "packages/cron/src/worker.ts",
                "tsConfig": "packages/cron/tsconfig.lib.json"
            }
        },
        "build:local": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/cron",
                "main": "packages/cron/src/local.ts",
                "tsConfig": "packages/cron/tsconfig.lib.json"
            }
        },
        "deploy:prod": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "commands": ["wrangler publish --env prod"]
            }
        },
        "run:local": {
            "executor": "nx:run-commands",
            "dependsOn": ["build:local"],
            "options": {
                "commands": ["node dist/packages/cron/local.js"]
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/cron/**/*.ts"]
            }
        },
        "lint-fix": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/cron/**/*.ts"],
                "fix": true
            }
        }
    },
    "tags": []
}
