{
    "name": "cron",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/cron/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/cron",
                "main": "packages/cron/src/worker.ts",
                "tsConfig": "packages/cron/tsconfig.lib.json",
                "assets": ["packages/cron/*.md"],
                "generatePackageJson": true
            }
        },
        "build:local": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/cron",
                "main": "packages/cron/src/local.ts",
                "tsConfig": "packages/cron/tsconfig.lib.json",
                "assets": ["packages/cron/*.md"],
                "generatePackageJson": true
            }
        },
        "deploy:prod": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "commands": ["wrangler publish --env prod"],
                "parallel": false
            }
        },
        "run:local": {
            "executor": "nx:run-commands",
            "dependsOn": ["build:local"],
            "options": {
                "commands": ["node dist/packages/cron/local.js"],
                "parallel": false
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/cron/**/*.ts"]
            }
        },
        "lint-fix": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/cron/**/*.ts"],
                "fix": true
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/cron/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
